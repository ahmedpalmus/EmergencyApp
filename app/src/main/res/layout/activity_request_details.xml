<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RequestDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="22sp"
                android:text="Request Details"
                android:textAlignment="center"
                android:textColor="#311B92"
                android:fontFamily="@font/elephant"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CDF6F5F5"
                android:elevation="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/post_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="By: Ahmed Hassan"
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/post_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="20/05/2022"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="18dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CDF6F5F5"
                android:elevation="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Phone "
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/post_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="0566987789"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="18dp" />
                <Button
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/box_2"
                    android:text="Call"
                    android:textAllCaps="false"
                    android:layout_gravity="end"
                    android:textColor="#000"
                    android:textSize="18dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CDF6F5F5"
                android:elevation="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Gender "
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/post_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Male"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/post_det"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:text="Request details"
                android:textSize="17dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/image_palce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:padding="5dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="center"
                    android:background="@color/white"
                    android:src="@drawable/logo"
                     />
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/map_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/box_2"
                android:paddingHorizontal="10dp"
                android:text="View Location"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/resps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/box_1"
                android:padding="10dp"
                android:text="View Responses"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:drawableLeft="@drawable/comments"
                android:layout_marginTop="10dp"
                android:textSize="18dp" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#CDF6F5F5"
                    android:padding="10dp"
                    android:text="Your Response:"
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ur_response"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your response"
                    android:lines="3" />

                <Button
                    android:id="@+id/add_response"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/box_1"
                    android:paddingHorizontal="10dp"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>
            <Button
                android:visibility="gone"
                android:id="@+id/view_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/box_1"
                android:paddingHorizontal="10dp"
                android:text="View Responses"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/box_5"
                    android:paddingHorizontal="10dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>