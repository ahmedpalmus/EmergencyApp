<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseDetails"
    android:orientation="vertical"
    android:background="@drawable/box_6"
    android:padding="5dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1EFEF"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mem_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Course title"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@drawable/gradient_move"
                    android:layout_margin="10dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/mem_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="25/05/2022"
                android:textAlignment="textEnd"
                android:textColor="#000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place: "
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/mem_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Abha "
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Period: "
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/mem_period"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2 months"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Start Date: "
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/mem_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="26/06/2023"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact Details"
                android:padding="10dp"
                android:textColor="#fff"
                android:textSize="16sp"
                android:background="@drawable/box_1"
                android:layout_marginHorizontal="10dp"

                />
            <TextView
                android:layout_marginHorizontal="10dp"
                android:id="@+id/mem_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:text="..."
                android:textStyle="bold"
                android:textColor="#5E35B1"

                />
            <LinearLayout
                android:id="@+id/l_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Course Details"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:background="@drawable/box_1"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/mem_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:text="..."
                    android:textStyle="bold"
                    android:textColor="#5E35B1"

                    />


            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            >
            <Button
                android:id="@+id/mem_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16sp"
                android:padding="10dp"
                android:background="@drawable/gradient_green"
                android:layout_marginHorizontal="10dp"/>



        </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>