<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPage"
    android:background="@drawable/box_6"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:text="@string/logo"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#C8215A"
        android:fontFamily="@font/masque"/>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/client_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/box_1"
            android:drawableLeft="@drawable/help"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:fontFamily="@font/masque"
            android:gravity="center"
            android:padding="10dp"
            android:text="Request help"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:drawableLeft="@drawable/article"
                android:id="@+id/client_articles"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:background="@drawable/box_2"
                android:gravity="center"
                android:textAllCaps="false"
                android:fontFamily="@font/masque"
                android:padding="10dp"
                android:text="Articles"
                android:textColor="#C60144"
                android:drawablePadding="10dp"

                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:drawableLeft="@drawable/video"
                android:id="@+id/client_vids"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:background="@drawable/box_2"
                android:gravity="center"
                android:textAllCaps="false"
                android:fontFamily="@font/masque"
                android:padding="10dp"
                android:text="Videos"
                android:textColor="#C60144"
                android:drawablePadding="10dp"

                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
android:drawableLeft="@drawable/course"
                android:id="@+id/client_course"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:background="@drawable/box_2"
                android:gravity="center"
                android:textAllCaps="false"
                android:fontFamily="@font/masque"
                android:padding="10dp"
                android:text="Courses"
                android:textColor="#C60144"
                android:drawablePadding="10dp"

                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:drawableLeft="@drawable/prof"
                android:id="@+id/client_prof"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:background="@drawable/box_2"
                android:gravity="center"
                android:padding="10dp"
                android:fontFamily="@font/masque"
                android:text="@string/profile"
                android:textColor="#C60144"
                android:drawablePadding="10dp"

                android:textSize="20sp"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>