<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCourse"
    android:orientation="vertical"
    android:background="@drawable/box_6"
    android:padding="5dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:text="Add a new Course"
        android:textAlignment="center"
        android:textColor="#684BE4"
        android:fontFamily="@font/elephant"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/l1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Title"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    />
                <EditText
                    android:id="@+id/po_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/l2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Place"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    />
                <EditText
                    android:id="@+id/po_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/l3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Period"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    />
                <EditText
                    android:id="@+id/po_period"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/l4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Start Date"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    />

                <Button
                    android:id="@+id/po_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:text="Select Date"
                    android:textAllCaps="false"
                    android:background="@drawable/box_2"
                    android:textSize="16sp" />
            </LinearLayout>

                <TextView
                    android:id="@+id/l6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Details"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:background="#EAE7E7"
                    />
                <EditText
                    android:id="@+id/po_contatc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:lines="3"
                    android:gravity="top"
android:hint="Enter the phone or email to contact"
                    />

            <TextView
                android:id="@+id/l7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Details"
                android:padding="10dp"
                android:textColor="#000"
                android:textSize="18dp"
                android:background="#EAE7E7"
                />
            <EditText
                android:layout_marginHorizontal="10dp"
                android:id="@+id/po_details"
                android:layout_width="match_parent"
                android:lines="4"
                android:gravity="top"
                android:layout_height="wrap_content"
                android:hint="Enter the details"
                android:padding="10dp"
                android:textSize="18dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                >
                <Button
                    android:id="@+id/po_save"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:padding="10dp"
                    android:background="@drawable/box_4"
                    android:layout_marginHorizontal="10dp"/>
                <Button
                    android:visibility="gone"
                    android:id="@+id/po_del"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="20dp"

                    android:padding="10dp"
                    android:background="@drawable/box_1"
                    android:layout_marginHorizontal="10dp"/>


            </LinearLayout>
            <Button
                android:id="@+id/po_cancel"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18dp"

                android:padding="10dp"
                android:background="@drawable/box_1"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>